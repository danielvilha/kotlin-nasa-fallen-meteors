<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FallenMeteors" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mine_shaft</item>
        <item name="colorPrimaryVariant">@color/torea_bay</item>
        <item name="colorOnPrimary">@color/blizzard_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mine_shaft</item>
        <item name="colorSecondaryVariant">@color/torea_bay</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoFontStyle</item>
    </style>
    
    <style name="Theme.FallenMeteors.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="statusBarBackground">@color/white</item>
        <item name="android:statusBarColor">@color/torea_bay</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="Theme.FallenMeteors.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FallenMeteors.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FallenMeteors.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RobotoFontStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>